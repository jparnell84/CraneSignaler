<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crane Signal Evaluator v2</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- MediaPipe Holistic -->
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/holistic/holistic.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/camera_utils/camera_utils.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/drawing_utils/drawing_utils.js" crossorigin="anonymous"></script>
    
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #0f172a; color: white; }
        canvas { transform: scaleX(-1); } 
        video { transform: scaleX(-1); display: none; }
        .glass-panel { background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(12px); border: 1px solid rgba(255,255,255,0.1); }
        .tab-active { background-color: #3b82f6; color: white; }
        .tab-inactive { background-color: rgba(255,255,255,0.05); color: #94a3b8; }
    </style>
</head>
<body class="h-screen w-full flex flex-col items-center overflow-hidden bg-slate-900">

    <!-- Top Bar: Tabs -->
    <div class="w-full max-w-5xl mt-4 flex justify-between items-center px-4 z-10">
        <div class="flex gap-2">
            <button id="tab-training" class="px-6 py-2 rounded-lg font-bold transition-all tab-active" onclick="setMode('training')">
                Training Mode
            </button>
            <button id="tab-assessment" class="px-6 py-2 rounded-lg font-bold transition-all tab-inactive" onclick="setMode('assessment')">
                Assessment Mode
            </button>
        </div>
        
        <!-- Voice Status -->
        <div class="flex items-center gap-3 bg-slate-800 px-4 py-2 rounded-lg border border-slate-700">
            <div id="voice-indicator" class="w-3 h-3 rounded-full bg-red-500"></div>
            <span id="voice-text" class="text-sm font-mono text-slate-400">Radio: OFF</span>
            <button onclick="toggleVoice()" class="text-xs bg-slate-700 hover:bg-slate-600 px-2 py-1 rounded ml-2">Toggle</button>
        </div>
    </div>

    <!-- Main Viewport -->
    <div class="relative w-full h-full max-w-5xl flex-1 my-4 flex items-center justify-center bg-black rounded-2xl overflow-hidden shadow-2xl border border-slate-700">
        <video id="input_video"></video>
        <canvas id="output_canvas" class="absolute inset-0 w-full h-full object-cover"></canvas>

        <!-- MODE: TRAINING HUD -->
        <div id="hud-training" class="absolute top-6 left-6 p-6 rounded-2xl glass-panel w-80">
            <h2 class="text-xs font-bold text-blue-400 uppercase tracking-widest mb-2">Real-Time Feedback</h2>
            <div id="train-signal" class="text-3xl font-black text-white mb-1">WAITING...</div>
            
            <div class="mt-4 space-y-2">
                <div class="flex justify-between text-sm border-b border-slate-700 pb-2">
                    <span class="text-slate-400">Thumb</span>
                    <span id="train-thumb" class="font-mono font-bold text-yellow-500">--</span>
                </div>
                <div class="flex justify-between text-sm border-b border-slate-700 pb-2">
                    <span class="text-slate-400">Arm Angle</span>
                    <span id="train-angle" class="font-mono font-bold text-white">--°</span>
                </div>
            </div>
        </div>

        <!-- MODE: ASSESSMENT HUD (Hidden by default) -->
        <div id="hud-assessment" class="hidden absolute top-6 right-6 left-6 mx-auto max-w-md p-8 rounded-2xl glass-panel text-center">
            <h2 class="text-sm font-bold text-slate-400 uppercase tracking-widest mb-4">Drill Command</h2>
            <div id="assess-prompt" class="text-4xl font-black text-white mb-6">PRESS START</div>
            
            <div id="assess-timer" class="w-full bg-slate-700 h-2 rounded-full overflow-hidden mb-4 hidden">
                <div id="assess-progress" class="bg-blue-500 h-full w-full"></div>
            </div>

            <div id="assess-result" class="text-xl font-bold text-slate-300">Status: Idle</div>
            
            <button id="btn-start-assess" onclick="startAssessmentDrill()" class="mt-6 w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 rounded-xl transition-colors">
                Start Next Drill
            </button>
        </div>

        <!-- Voice Subtitles Overlay -->
        <div id="voice-subtitle" class="absolute bottom-20 left-0 right-0 text-center pointer-events-none">
            <span class="bg-black/50 text-white px-4 py-2 rounded-lg text-lg hidden"></span>
        </div>
    </div>

    <script type="module">
        // --- 1. GLOBAL VARIABLES & SETUP ---
        const videoElement = document.getElementById('input_video');
        const canvasElement = document.getElementById('output_canvas');
        const canvasCtx = canvasElement.getContext('2d');
        
        let currentMode = 'training'; // 'training' or 'assessment'
        let currentSignal = "NONE"; // The signal detected by AI this frame
        let voiceActive = false;
        
        // Assessment State
        let targetSignal = "";
        let assessmentTimer = null;
        let isAssessing = false;

        // --- 2. GEOMETRY & AI LOGIC ---
        function calculateAngle(a, b, c) {
            if(!a || !b || !c) return 0;
            const radians = Math.atan2(c.y - b.y, c.x - b.x) - Math.atan2(a.y - b.y, a.x - b.x);
            let angle = Math.abs(radians * 180.0 / Math.PI);
            if (angle > 180.0) angle = 360 - angle;
            return angle;
        }

        function detectThumbState(handLandmarks) {
            if (!handLandmarks) return "NONE";
            const thumbTip = handLandmarks[4];
            const indexMCP = handLandmarks[5];
            const wrist = handLandmarks[0];
            const tipToKnuckle = indexMCP.y - thumbTip.y; 
            const threshold = Math.abs(wrist.y - indexMCP.y) * 0.5; 

            if (tipToKnuckle > threshold) return "UP";
            if (tipToKnuckle < -threshold) return "DOWN";
            return "NEUTRAL";
        }

        // --- 3. UI MANAGEMENT ---
        window.setMode = (mode) => {
            currentMode = mode;
            document.getElementById('tab-training').className = `px-6 py-2 rounded-lg font-bold transition-all ${mode === 'training' ? 'tab-active' : 'tab-inactive'}`;
            document.getElementById('tab-assessment').className = `px-6 py-2 rounded-lg font-bold transition-all ${mode === 'assessment' ? 'tab-active' : 'tab-inactive'}`;
            
            if(mode === 'training') {
                document.getElementById('hud-training').classList.remove('hidden');
                document.getElementById('hud-assessment').classList.add('hidden');
            } else {
                document.getElementById('hud-training').classList.add('hidden');
                document.getElementById('hud-assessment').classList.remove('hidden');
            }
        };

        // --- 4. ASSESSMENT ENGINE ---
        const signalsList = ["EMERGENCY STOP", "RAISE BOOM", "LOWER BOOM"];
        
        window.startAssessmentDrill = () => {
            if(isAssessing) return;
            isAssessing = true;
            
            // 1. Pick random signal
            targetSignal = signalsList[Math.floor(Math.random() * signalsList.length)];
            document.getElementById('assess-prompt').innerText = targetSignal;
            document.getElementById('assess-result').innerText = "Perform signal now...";
            document.getElementById('assess-result').className = "text-xl font-bold text-yellow-400";
            document.getElementById('btn-start-assess').classList.add('hidden');
            document.getElementById('assess-timer').classList.remove('hidden');

            // 2. Start Timer (5 seconds)
            let timeLeft = 5;
            const progress = document.getElementById('assess-progress');
            
            assessmentTimer = setInterval(() => {
                timeLeft -= 0.1;
                progress.style.width = (timeLeft / 5) * 100 + "%";

                // Check success during the window
                if (currentSignal === targetSignal) {
                    finishAssessment(true);
                }

                if (timeLeft <= 0) {
                    finishAssessment(false);
                }
            }, 100);
        };

        function finishAssessment(success) {
            clearInterval(assessmentTimer);
            isAssessing = false;
            document.getElementById('assess-timer').classList.add('hidden');
            document.getElementById('btn-start-assess').classList.remove('hidden');

            const resultEl = document.getElementById('assess-result');
            if(success) {
                resultEl.innerText = "SUCCESS!";
                resultEl.className = "text-3xl font-black text-green-500";
                // Visual Flair
                canvasCtx.save();
                canvasCtx.strokeStyle = "#22c55e";
                canvasCtx.lineWidth = 20;
                canvasCtx.strokeRect(0,0, canvasElement.width, canvasElement.height);
                canvasCtx.restore();
            } else {
                resultEl.innerText = "FAILED / TIMEOUT";
                resultEl.className = "text-3xl font-black text-red-500";
            }
        }

        // --- 5. VOICE RECOGNITION STUB ---
        window.toggleVoice = () => {
            if (!('webkitSpeechRecognition' in window)) {
                alert("Voice not supported in this browser (Try Chrome)");
                return;
            }
            voiceActive = !voiceActive;
            const indicator = document.getElementById('voice-indicator');
            const text = document.getElementById('voice-text');
            
            if(voiceActive) {
                indicator.className = "w-3 h-3 rounded-full bg-green-500 animate-pulse";
                text.innerText = "Radio: LISTENING";
                startListening();
            } else {
                indicator.className = "w-3 h-3 rounded-full bg-red-500";
                text.innerText = "Radio: OFF";
                stopListening();
            }
        };

        let recognition;
        function startListening() {
            recognition = new webkitSpeechRecognition();
            recognition.continuous = true;
            recognition.interimResults = false;
            recognition.lang = 'en-US';

            recognition.onresult = (event) => {
                const last = event.results.length - 1;
                const command = event.results[last][0].transcript.trim().toLowerCase();
                
                // Show Subtitle
                const sub = document.getElementById('voice-subtitle').querySelector('span');
                sub.innerText = `Radio: "${command}"`;
                sub.classList.remove('hidden');
                setTimeout(() => sub.classList.add('hidden'), 3000);

                console.log("Voice Command:", command);
                // Logic to combine Voice + Gesture can go here
            };

            recognition.start();
        }

        function stopListening() {
            if(recognition) recognition.stop();
        }


        // --- 6. MEDIAPIPE LOOP ---
        function onResults(results) {
            // Canvas Setup
            canvasElement.width = videoElement.videoWidth;
            canvasElement.height = videoElement.videoHeight;
            canvasCtx.save();
            canvasCtx.clearRect(0, 0, canvasElement.width, canvasElement.height);
            canvasCtx.drawImage(results.image, 0, 0, canvasElement.width, canvasElement.height);

            // Drawing
            drawConnectors(canvasCtx, results.poseLandmarks, POSE_CONNECTIONS, {color: '#64748b', lineWidth: 2});
            drawLandmarks(canvasCtx, results.poseLandmarks, {color: '#cbd5e1', lineWidth: 1, radius: 3});
            drawConnectors(canvasCtx, results.leftHandLandmarks, HAND_CONNECTIONS, {color: '#eab308', lineWidth: 3});
            drawConnectors(canvasCtx, results.rightHandLandmarks, HAND_CONNECTIONS, {color: '#eab308', lineWidth: 3});

            // Detection Logic
            let detected = "NONE";
            let thumbStatus = "NONE";
            let angleDebug = 0;

            if (results.poseLandmarks) {
                const rightShoulder = results.poseLandmarks[12];
                const rightElbow = results.poseLandmarks[14];
                const rightWrist = results.poseLandmarks[16];
                const leftShoulder = results.poseLandmarks[11];
                const leftElbow = results.poseLandmarks[13];
                const leftWrist = results.poseLandmarks[15];

                const rAngle = calculateAngle(rightShoulder, rightElbow, rightWrist);
                const lAngle = calculateAngle(leftShoulder, leftElbow, leftWrist);
                angleDebug = Math.round(rAngle);

                // Check Thumbs
                if (results.leftHandLandmarks) thumbStatus = detectThumbState(results.leftHandLandmarks);
                else if (results.rightHandLandmarks) thumbStatus = detectThumbState(results.rightHandLandmarks);

                // Signal Rules
                const isRightExtended = rAngle > 145;
                const isLeftExtended = lAngle > 145;
                const isRightHorizontal = Math.abs(rightWrist.y - rightShoulder.y) < 0.25;
                const isLeftHorizontal = Math.abs(leftWrist.y - leftShoulder.y) < 0.25;

                if (isRightExtended && isLeftExtended && isRightHorizontal && isLeftHorizontal) {
                    detected = "EMERGENCY STOP";
                } else if ((isRightExtended && isRightHorizontal) || (isLeftExtended && isLeftHorizontal)) {
                    if (thumbStatus === "UP") detected = "RAISE BOOM";
                    else if (thumbStatus === "DOWN") detected = "LOWER BOOM";
                    else detected = "ARM EXTENDED";
                }
            }

            currentSignal = detected; // Update global state

            // Update Training HUD
            if(currentMode === 'training') {
                const resBox = document.getElementById('train-signal');
                resBox.innerText = detected;
                
                // Color coding
                if(detected === "EMERGENCY STOP") resBox.className = "text-3xl font-black text-red-500 mb-1";
                else if(detected.includes("BOOM")) resBox.className = "text-3xl font-black text-green-400 mb-1";
                else resBox.className = "text-3xl font-black text-white mb-1";

                document.getElementById('train-thumb').innerText = thumbStatus;
                document.getElementById('train-angle').innerText = angleDebug + "°";
            }

            canvasCtx.restore();
        }

        const holistic = new Holistic({locateFile: (file) => `https://cdn.jsdelivr.net/npm/@mediapipe/holistic/${file}`});
        holistic.setOptions({ modelComplexity: 1, smoothLandmarks: true });
        holistic.onResults(onResults);

        const camera = new Camera(videoElement, {
            onFrame: async () => { await holistic.send({image: videoElement}); },
            width: 1280, height: 720
        });
        camera.start();
    </script>
</body>
</html>
